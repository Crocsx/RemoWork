{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx", "unused-imports"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "unused-imports/no-unused-imports": "error",
        "unused-imports/no-unused-vars": [
          "warn",
          {
            "vars": "all",
            "varsIgnorePattern": "^_",
            "args": "after-used",
            "argsIgnorePattern": "^_"
          }
        ],
        "no-restricted-imports": [
          "error",
          {
            "paths": ["apps/*"]
          }
        ],
        "@typescript-eslint/no-unused-vars": [
          "warn",
          {
            "vars": "all",
            "varsIgnorePattern": "^_",
            "args": "after-used",
            "argsIgnorePattern": "^_"
          }
        ],
        "import/order": [
          "error",
          {
            "pathGroups": [
              {
                "pattern": "{react,react/**/*,react-*,react-*/**/*}",
                "group": "builtin",
                "position": "before"
              },
              {
                "pattern": "~workspace/lib/**",
                "group": "internal",
                "position": "after"
              },
              {
                "pattern": "~workspace/app/**",
                "group": "internal",
                "position": "after"
              }
            ],
            "pathGroupsExcludedImportTypes": [
              "react",
              "react/**/*",
              "react-*",
              "react-*/**/*"
            ],
            "groups": [
              ["builtin", "external", "internal"],
              ["parent", "sibling", "index"]
            ],
            "newlines-between": "always",
            "alphabetize": {
              "order": "asc",
              "caseInsensitive": true
            }
          }
        ],
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "allow": [],
            "enforceBuildableLibDependency": true,
            "allowCircularSelfDependency": true,
            "depConstraints": [
              {
                "sourceTag": "type:no-dep",
                "onlyDependOnLibsWithTags": [""]
              },
              {
                "sourceTag": "type:util",
                "onlyDependOnLibsWithTags": []
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": ["type:util"]
              },
              {
                "sourceTag": "type:shared",
                "onlyDependOnLibsWithTags": ["type:util"]
              },
              {
                "sourceTag": "type:external",
                "onlyDependOnLibsWithTags": ["type:shared"]
              },
              {
                "sourceTag": "type:common",
                "onlyDependOnLibsWithTags": ["type:shared", "type:external"]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": [
                  "type:shared",
                  "type:external",
                  "type:common"
                ]
              },
              {
                "sourceTag": "type:app",
                "onlyDependOnLibsWithTags": [
                  "type:feature",
                  "type:shared",
                  "type:common",
                  "type:external",
                  "type:routing"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    }
  ]
}
