{
  "name": "remo-work-functions",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/remo-work-functions/src",
  "tags": ["type:app"],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/remo-work-functions",
        "main": "apps/remo-work-functions/src/main.ts",
        "tsConfig": "apps/remo-work-functions/tsconfig.app.json",
        "webpackConfig": "apps/remo-work-functions/webpack.config.js",
        "generatePackageJson": true,
        "platform": "node",
        "bundle": true,
        "thirdParty": false,
        "dependenciesFieldType": "dependencies",
        "target": "node18",
        "format": ["esm"],
        "esbuildOptions": {
          "logLevel": "info"
        }
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "configurations": {
        "production": {
          "commands": [
            "firebase deploy --only functions:remo-work-functions:createUser --project remo-work"
          ]
        },
        "development": {
          "commands": [
            "firebase deploy --only functions:remo-work-functions:createUser --project remo-work-preview"
          ]
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/remo-work-functions/jest.config.ts"
      }
    }
  }
}
